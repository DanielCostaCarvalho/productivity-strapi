{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "Project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "scope": {
      "type": "enumeration",
      "enum": [
        "work",
        "personal",
        "study"
      ],
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "initial_date": {
      "type": "datetime",
      "required": true
    },
    "final_date": {
      "type": "datetime"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
